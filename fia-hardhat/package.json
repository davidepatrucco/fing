{
  "name": "fia-hardhat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
  "deploy": "npx hardhat run scripts/deploy.ts --network baseSepolia",
  "deploy:local": "npx hardhat run scripts/deploy.ts --network hardhat",
  "verify": "npx hardhat verify --network baseSepolia",
  "airdrop": "node --loader ts-node/esm scripts/airdrop.ts",
    "leaderboard": "FIA_ADDR=$FIA_ADDR hardhat run scripts/leaderboard.ts --network baseSepolia",
  "monitor": "FIA_ADDR=$FIA_ADDR hardhat run scripts/watch-events.ts --network baseSepolia",
  "test": "npx hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
  "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@types/node": "^24.3.0",
    "hardhat": "^2.17.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.6.0"
  }
}
