{
  "name": "fia-hardhat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "deploy:proxy": "npx hardhat run scripts/deploy-proxy.js --network baseSepolia",
    "deploy:proxy:local": "npx hardhat run scripts/deploy-proxy.js --network hardhat",
    "upgrade:v7": "npx hardhat run scripts/upgrade-to-v7.js --network baseSepolia",
    "upgrade:v7:local": "npx hardhat run scripts/upgrade-to-v7.js --network hardhat",
    "deploy:v5": "npx hardhat run scripts/deploy-v5.ts --network baseSepolia",
    "deploy:v5:local": "npx hardhat run scripts/deploy-v5.ts --network hardhat",
    "verify": "npx hardhat verify --network baseSepolia",
    "airdrop": "node --loader ts-node/esm scripts/airdrop.ts",
    "verify:v2": "hardhat run scripts/verify-v2.ts --network baseSepolia",
    "leaderboard": "FIA_ADDR=$FIA_ADDR hardhat run scripts/leaderboard.ts --network baseSepolia",
    "monitor": "FIA_ADDR=$FIA_ADDR hardhat run scripts/watch-events.ts --network baseSepolia",
    "test": "npx hardhat test test/**v6**.test.*",
    "coverage": "npx hardhat coverage --testfiles 'test/**v6**.test.*'",
    "test:v5": "npx hardhat test test/fia-v5.test.ts",
    "governance:status": "npx hardhat run scripts/governance.ts --network baseSepolia -- status",
    "governance:create-proposal": "npx hardhat run scripts/governance.ts --network baseSepolia -- create-proposal",
    "governance:vote": "npx hardhat run scripts/governance.ts --network baseSepolia -- vote",
    "governance:execute": "npx hardhat run scripts/governance.ts --network baseSepolia -- execute",
    "staking:status": "npx hardhat run scripts/staking.ts --network baseSepolia -- status",
    "staking:stake": "npx hardhat run scripts/staking.ts --network baseSepolia -- stake",
    "staking:unstake": "npx hardhat run scripts/staking.ts --network baseSepolia -- unstake",
    "staking:claim-rewards": "npx hardhat run scripts/staking.ts --network baseSepolia -- claim-rewards",
    "staking:add-rewards": "npx hardhat run scripts/staking.ts --network baseSepolia -- add-rewards",
    "migration:demo": "npx hardhat run scripts/migration-v4-to-v5.ts --network hardhat",
    "features:demo": "npx hardhat run scripts/advanced-features-demo.ts --network hardhat"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "chai": "^4.5.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.7",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.6.0"
  }
}
