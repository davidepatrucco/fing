# FIA Website Environment Variables

# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Blockchain Configuration
NEXT_PUBLIC_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_CHAIN_ID=84532

# Contract Addresses (Base Sepolia) - FIACoin V6
NEXT_PUBLIC_FIA_V6_ADDRESS=
NEXT_PUBLIC_MOCK_DEX_ADDRESS=
NEXT_PUBLIC_MULTISIG_ADDRESS=
NEXT_PUBLIC_LP_TIMELOCK_ADDRESS=

# Legacy Contract Addresses (for backward compatibility)
FIA_CONTRACT_ADDRESS=
FIACOIN_V5_CONTRACT_ADDRESS=
MULTISIG_CONTRACT_ADDRESS=
TIMELOCK_CONTRACT_ADDRESS=

# Feature Flags
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_MOCK_DEX=false
NEXT_PUBLIC_ENABLE_GOVERNANCE=true
NEXT_PUBLIC_ENABLE_STAKING=true
NEXT_PUBLIC_ENABLE_PROTECTED_TRANSFERS=true

# Basic Authentication (for stealth mode)
# Remove or leave empty to disable authentication
AUTH_USERNAME=admin
AUTH_PASSWORD=your-secure-password

# Database
DATABASE_PATH=./events.db

# RPC Configuration
RPC_BASE_SEPOLIA=https://sepolia.base.org

# Block numbers for event indexing
START_BLOCK_FIA=
START_BLOCK_FIACOIN_V5=

# Optional: BaseScan API key for enhanced features
BASESCAN_API_KEY=